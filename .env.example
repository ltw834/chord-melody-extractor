# ChordSnap Environment Variables
# Copy this file to .env.local and customize as needed

# Analytics (optional)
# Set to 'on' to enable privacy-focused analytics
NEXT_PUBLIC_ANALYTICS=off

# Audio Processing Configuration
# Frame size for FFT analysis (powers of 2: 1024, 2048, 4096, 8192)
NEXT_PUBLIC_DEFAULT_FRAME_SIZE=4096

# Hop size for frame overlap (smaller = more processing, smoother detection)
NEXT_PUBLIC_DEFAULT_HOP_SIZE=1024

# Default sample rate (Hz)
NEXT_PUBLIC_DEFAULT_SAMPLE_RATE=44100

# Performance Settings
# Maximum Web Worker threads for audio processing
NEXT_PUBLIC_MAX_WORKERS=2

# Default vocabulary level (basic|extended|rich)
NEXT_PUBLIC_DEFAULT_VOCABULARY=basic

# UI/UX Settings
# Theme preference (light|dark|system)
NEXT_PUBLIC_DEFAULT_THEME=system

# Debug mode - enables additional logging
NEXT_PUBLIC_DEBUG=false

# Development only - skip audio permission for testing
NEXT_PUBLIC_SKIP_MIC_PERMISSION=false